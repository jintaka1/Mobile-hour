<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>Mobile Hour - Phones</title>
  </head>
  <body>
    <main>
      <%- include("partials/header.ejs") %>

      <section class="product-details">
        <article class="phone-card">
          <img src="img/<%= product.product_picture %>.jpg" alt="phone" />
        </article>
        <section class="buy-content">
          <h2><%= product.product_name %></h2>
          <span><b>Price: </b>$<%= product.product_price %></span>
          <p><%= product.product_model %></p>
          <P>Manufacturer: <%= product.product_manufacturer %></P>
          <a
            class="buy-button"
            href="product_checkout?id=<%= product.product_id %>"
            >Buy
          </a>
          <br />
        </section>
      </section>
      <section class="feature-content">
        <h2>Product Feature</h2>
        <section class="product-feature">
          <section class="product-feature1">
            <p><b>Weight</b>: <%= product.feature_weight_g %> g</p>
            <p><b>Height</b>: <%= product.feature_height_mm %> mm</p>
            <p><b>Width</b>: <%= product.feature_width_mm %> mm</p>
            <p><b>Depth</b>: <%= product.feature_depth_mm %> mm</p>
            <p>
              <b>Operating System</b>: <%= product.feature_operating_system %>
            </p>
            <p><b>Screen Size</b>: <%= product.feature_screen_size %></p>
            <p>
              <b>Screen Resolution</b>: <%= product.feature_screen_resolution %>
            </p>
          </section>
          <section class="product-feature2">
            <p><b>CPU</b>: <%= product.feature_cpu %></p>
            <p><b>RAM</b>: <%= product.feature_ram %></p>
            <p><b>Storage</b>: <%= product.feature_storage %></p>
            <p><b>Battery</b>: <%= product.feature_battery %></p>
            <p><b>Rare Camera</b>: <%= product.feature_rear_camera %></p>
            <p><b>Front Camera</b>: <%= product.feature_front_camera %></p>
          </section>
        </section>
      </section>
      <%- include("partials/footer.ejs") %>
    </main>
  </body>
</html>
