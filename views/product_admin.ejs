<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head.ejs") %>
        <title>Mobile Hour - Product Admin</title>
    </head>
    <body>
        <main>
            <%- include("partials/header.ejs") %> <%-
            include("partials/admin_nav.ejs", {access_role: access_role}) %>
            <section class="page-content">
                <section class="cols-6 data-list product-admin">
                    <span class="data-list-heading">Name</span>
                    <span class="data-list-heading model">Model</span>
                    <span class="data-list-heading">Stock</span>
                    <span class="data-list-heading">Price</span>
                    <span class="data-list-heading">Manufacturer</span>
                    <span></span>
                    <% for (let product of products) { %>
                    <span><%= product.product_name %></span>
                    <span class="model"><%= product.product_model %></span>
                    <span><%= product.product_stock %></span>
                    <span><%= product.product_price %></span>
                    <span><%= product.product_manufacturer %></span>
                    <a
                        href="/product_edit?edit_id=<%= product.product_id %>"
                        class="link-button"
                        >Edit</a
                    >
                    <% } %>
                </section>
                <section class="create-button">
                    <a
                        href="/product_edit?%>"
                        class="link-button"
                        >Create New Product</a
                    >
                </section>
               
            </section>
            <%- include("partials/footer.ejs") %>
        </main>
    </body>
</html>
